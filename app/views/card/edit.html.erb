<% provide(:title, 'Edit card') %>
<h1>Edit card</h1>

<div>
	<%= form_for(@card) do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :discription %>
		<%= f.text_area :discription %>

		<%= f.hidden_field :column_id %>

		<%= f.label :deadline %>
		<%= f.date_select :deadline %>

		<%= f.submit "Submit", disable_with: 'Submiting...' %>
	<% end %>
</div>